@model EntityLayer.Concrete.Communication
@{
    ViewData["Title"] = "SendMessage";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<h1>Mesaj Oluştur</h1>

@using (Html.BeginForm("SendMessage", "Communication", FormMethod.Post))
{
    @Html.Label("Alıcı")
    <input type="text" class="form-control" />
    <br />
    @Html.Label("Konu")
    @Html.TextBoxFor(x => x.Subject, new { @class = "form-control" })
    <br />
    @Html.Label("Mesajınız")
    @Html.TextAreaFor(x => x.Details, 15, 3, new { @class = "form-control" })
    <br />
    <button class="btn btn-info">Mesaj Gönder</button>
}

