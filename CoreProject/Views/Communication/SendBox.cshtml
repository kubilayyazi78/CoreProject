@using EntityLayer.Concrete
@model List<Communication>
@{
    ViewData["Title"] = "SendBox";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<h1>Giden Kutusu</h1>
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Konu</th>
        <th>Alıcı</th>
        <th>Tarih</th>
        <th>Mesajı Aç</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <th>@item.Id</th>
            <td>@item.Subject</td>
            <td>@item.ReceiverUser.Name</td>
            <td>@(((DateTime)@item.Date).ToString("dd-MMM-yyyy"))</td>
            <td><a href="/Communication/Details/@item.Id" class="btn btn-primary">Mesajı Aç</a></td>
        </tr>
    }
</table>

<a href="/Communication/SendMessage" class="btn btn-primary">Yeni Mesaj Oluştur.</a>
