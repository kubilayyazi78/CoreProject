@using CoreProject.Controllers
@model List<EmployeeClass>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Adı Soyadı</th>
        <th>Sil</th>
        <th>Düzenle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td><a href="/Employee/DeleteEmployee/@item.Id" class="btn btn-outline-danger">Sil</a></td>
            <td><a href="/Employee/EditEmployee/@item.Id" class="btn btn-outline-success">Düzenle</a></td>

        </tr>
    }
</table>
<td><a href="/Employee/AddEmployee" class="btn btn-outline-primary">Yeni Çalışan Girişi</a></td>
