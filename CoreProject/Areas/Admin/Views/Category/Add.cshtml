@model EntityLayer.Concrete.Category
@{
    ViewData["Title"] = "Add";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Yeni Kategori Girişi</h1>
<br />
@using (Html.BeginForm("Add", "Category", FormMethod.Post))
{
    <br />
    @Html.Label("Kategori Adı")
    @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.Name)
    <br />
    <br />
    @Html.Label("Kategori Açıklaması")
    @Html.TextAreaFor(x => x.Description, 15, 3, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.Description)
    <br />
    <br />
    <button class="btn btn-info">Kaydet</button>
}

